<html>
    <head>
        <script
    src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
    crossorigin="anonymous"></script>
    </head>

  <body>
    <div id="position"></div>

    <div id="status">
        HP: <span id="HP"> 5 / 5</span>
        <br>
        Level : <span id = 'level'>1</span>
        Exp : <span id = 'exp'>0</span>
        str : <span id='str'>5</span>
        def : <span id='def'>5</span>
        나무목도 : <span id='나무목도'>5</span>
        나무목검 : <span id='나무목검'>5</span>
        천갑옷 : <span id='천갑옷'>5</span>
        가죽갑옷 : <span id='가죽갑옷'>5</span>
        방패 : <span id='방패'>5</span>
    </div>
    <div id="game"></div>
    <div id="event_result"></div>
    <div id="control">
      <button value="1">동</button>
      <button value="3">서</button>
      <button value="2">남</button>
      <button value="0">북</button>
    </div>

  <script>

const sendAction = (action, params = {}) => {
      $.ajax({
        url: "/action",
        headers: {
          Authorization: "Bearer " + key
        },
        method: "POST",
        data: `action=${action}&direction=${params.direction}`,
      }).done((req) => {
        const { player, field, event } = req;

        $('#game').text(field.description);
        $('#position').text(`(${field.x},${field.y})`);
        const x = field.x;
        const y = field.y;
        field.canGo.forEach((canGo, idx) => {
          const dom = $(`button[value="${idx}"]`);
          canGo === 0 ? dom.hide() : dom.show();
          dom.unbind('click');
          if (canGo === 1) {
            dom.bind('click', function () {
              sendAction('move', {direction: idx});
            });
          }
        })

        if (event) {
          $('#event_result').text(event.description);
        } else {
          $('#event_result').text("아무일도 일어나지 않았다.");
        }

        $('#HP').text(`${player.HP} / ${player.maxHP}`)
        $('#level').text(`${player.level}`)
        $('#exp').text(`${player.exp}`)
        $('#str').text(`${player.str}`)
        $('#def').text(`${player.def}`)
        $('#나무목도').text(`${player.item.나무목도}개`)
        $('#나무목검').text(`${player.item.나무목검}개`)
        $('#천갑옷').text(`${player.item.천갑옷}개`)
        $('#가죽갑옷').text(`${player.item.가죽갑옷}개`)
        $('#방패').text(`${player.item.방패}개`)
      });
    }
    const key = localStorage.getItem('_key');
    if (!key) {
      location.href = "/";
    }

    sendAction("query");

  </script>
  </body>
</html>